pipeline {
     environment {
       IMAGE_NAME = "fil_rouge_gr3"
       IMAGE_TAG_LATEST = "latest"
       IMAGE_TAG_STAGING = "staging"
       PRODUCTION = "groupe3-production"
     }
     agent none
     stages {
         stage('Build image') {
             agent any
             steps {
                script {
                  sh 'docker build -t groupe3/$IMAGE_NAME:$IMAGE_TAG_STAGING .'
                }
             }
        }
        stage('Run container based on builded image') {
            agent any
            steps {
               script {
                 sh ''
                    docker run -dit --name $IMAGE_NAME -d -p 80:8080 -e PORT=8080 groupe3/$IMAGE_NAME:$IMAGE_TAG_STAGING
                    sleep 5
                 '''
               }
            }
       }
       stage ('Push Image on private docker registry') {
          agent any
          steps {
             script {
               sh ''
                    docker tag groupe3/$IMAGE_NAME:$IMAGE_TAG_STAGING/localhost:5000
                   docker push groupe3/$IMAGE_NAME:$IMAGE_TAG_STAGING
               '''
             }
          }
      }
       stage('Test image') {
           agent any
           steps {
              script {
                sh '''
                    curl http://172.17.0.1 | grep -q "Bootstrap"
                '''
              }
           }
      }
      
      stage('Clean Container') {
          agent any
          steps {
             script {
               sh '''
                 docker stop $IMAGE_NAME
                 docker rm $IMAGE_NAME
               '''
             }
          }
     }
     
     }
     stage('Push image in production and deploy it') {
       when {
              expression { GIT_BRANCH == 'origin/master' }
            }
      agent any
      environment {
          HEROKU_API_KEY = credentials('heroku_api_key')
      }  
      
     }
  }
}
